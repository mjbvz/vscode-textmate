{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"outDir": "out",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"alwaysStrict": true,
		"sourceMap": true,
		"declaration": true
	},
	"exclude": [
		"node_modules",
		"release",
		"out",
		"test-cases"
	]
}